<%= form_with(model: homework_submission, local: true) do |form| %>
  <% if homework_submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(homework_submission.errors.count, "error") %> prohibited this homework_submission from being saved:</h2>

      <ul>
        <% homework_submission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :homework_id, value: @homework_submission.homework_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="card p-5" style="width: 48rem;">
    <div class="form-group">
      <h5>Lecture: <%= homework_submission.homework.get_lecture_name %></h5>
    </div>

    <div class="form-group">
      <h6>Description</h6>
      <%= homework_submission.homework.description %>
    </div>

    <div class="form-group">
      <h6><%= form.label :pull_request, class: "input-group mb-3" %></h6>
      <%= form.text_field :pull_request, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
