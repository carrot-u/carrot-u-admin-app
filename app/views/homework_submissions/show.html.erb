<div class="container mb-auto py-3 text-center">
  <h2>Homework Submission</h2>
</div>

<div class="container mx-auto">
  <p id="notice"><%= notice %></p>
  <div class="card bg-white mb-3" style="max-width: 100rem;">
    <div class="card-header">
      <h5>Lecture: <%= @homework_submission.homework.get_lecture_name%></h5>
    </div>
    <div class="card-title p-3">
      <div class="row no-gutters">
        <p>
          <strong>Course session user:</strong>
          <%= @homework_submission.course_session_participant_id %>
        </p>
      </div>
      <div class="row no-gutters">
        <p>
          <strong>Pull Request:</strong>
        </p>
      </div>
      <div class="row no-gutters">
        <p>
          <%= @homework_submission.pull_request %>
        </p>
      </div>
      <div class="row no-gutters">
        <p>
          <strong>Is Public: </strong>
          <%= @homework_submission.is_public %>
        </p>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_homework_submission_path(@homework_submission) %> |
<%= link_to 'Course Session', course_session_path(@homework_submission.course_session_participant.course_session_id) %>
