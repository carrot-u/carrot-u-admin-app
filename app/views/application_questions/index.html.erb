
<div class="container mb-auto py-3 text-center">
  <h2>Student application questions</h2>
</div>
<%= link_to 'New question', new_application_question_path, class: 'btn btn-primary'%>

<p>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Text</th>
      <th scope="col">Role name</th>
      <th scope="col">Current</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
      <th scope="col" colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @application_questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.text %></td>
        <td><%= question.role %></td>
        <td><%= question.current %></td>
        <td><%= question.created_at %></td>
        <td><%= question.updated_at %></td>
        <td>
          <%= link_to 'Update', edit_application_question_path(question), class: "btn btn-info", method: :get %>
          <%= link_to 'Destroy', application_question_path(question), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


