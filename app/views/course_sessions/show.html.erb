<p id="notice"><%= notice %></p>
<div class="" style="border:1px solid black;">
  <p>
    <strong>Session Name:</strong>
    <%= @course_session.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @course_session.description %>
  </p>

  <p>
    <strong>Start Date:</strong>
    <%= @course_session.start_date %>
  </p>

  <p>
    <strong>End Date:</strong>
    <%= @course_session.end_date %>
  </p>

  <p>
    <strong>Github Repository:</strong>
    <%= @course_session.repository_link %>
  </p>

  <%= link_to 'Edit', edit_course_session_path(@course_session) %> |
  <%= link_to 'Back', course_sessions_path %>
</div>

<br></br>

<p>
  <strong>Lectures</strong>
</p>
<table>
  <thead>
    <tr>
      <th>Lecture ID</th>
      <th>Lecture name</th>
      <th>Lecture content</th>
      <th>Video link</th>
      <th>Homework</th>
      <th>Teacher</th>
      <th>CarrotU Session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_session.lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.id %></td>
        <td><%= lecture.lecture_name %></td>
        <td><%= lecture.lecture_content %></td>
        <td><%= lecture.video_link %></td>
        <% if lecture.has_homework? %>
          <td><%= link_to lecture.homework.content, homework_path(lecture.homework) %></td>
        <% else %>
          <td><%= link_to 'Add Homework', new_homework_path(lecture.id) %></td>
        <% end %>
        <td><%= lecture.teacher_id %></td>
        <td><%= lecture.course_session_id %></td>
        <td><%= link_to 'Show', lecture %></td>
        <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Lecture', new_lecture_path(@course_session.id) %>
