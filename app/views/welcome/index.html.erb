<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column text-center">
  <header class="masthead mb-auto">
    <div class="inner">
      <h3 class="masthead-brand">CarrotU</h3>
      <nav class="nav nav-masthead justify-content-center">
        <a class="nav-link active" href="#">Home</a>
        <%= link_to "Course Sessions", course_sessions_path, class: "nav-link active", role: "article", id: "sessions" %>
        <a class="nav-link" href="#">Apply</a>
        <a class="nav-link" href="#">Mentor</a>
      </nav>
    </div>
  </header>
  <span><p><%= @quote %></p></span>
  <main role="main" class="inner cover">
    <%= image_tag ("logo.png")%>
    <p class="lead">Instacart's In-House Coding Bootcamp</p>
    <p class="lead">
      <%= link_to "Sign in", login_url, class: "btn btn-lg btn-secondary", role: "button", id: "sign_in" %>
    </p>
  </main>
  <footer class="mastfoot mt-auto">
    Logged in as: <%= current_user&.email %>
  </footer>
</div>
