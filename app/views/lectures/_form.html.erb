<%= form_with(model: lecture, local: true) do |form| %>
  <div class="card p-5" style="width: 48rem;">
    <%= form.hidden_field :course_session_id, value: params[:format] %>

    <div class="form-group">
      <%= form.label :lecture_name, class: "input-group mb-3" %>
      <%= form.text_field :lecture_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :lecture_content, class: "input-group mb-3" %>
      <%= form.text_field :lecture_content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :video_link, class: "input-group mb-3" %>
      <%= form.text_field :video_link, class: "form-control" %>
    </div>


    <div class="form-group">
      <%= form.label :teacher_id, class: "input-group mb-3" %>
      <%= form.number_field :teacher_id, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary"%>
    </div>
  <% end %>
  </div>
